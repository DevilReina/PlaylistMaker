<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16"
    android:background="?attr/colorOnSecondary">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomText"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnPrimary"
        android:layout_gravity="start"
        android:paddingBottom="@dimen/dp_24"/>

    <!-- Search Button -->
    <LinearLayout
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/CustomButtonLayout"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomButtonImage"
            android:src="@drawable/ic_search"
            android:contentDescription="@string/search"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomText"
            android:text="@string/search"/>
    </LinearLayout>

    <!-- Media Library Button -->
    <LinearLayout
        android:id="@+id/media_library_button"
        style="@style/CustomButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomButtonImage"
            android:src="@drawable/ic_library"
            android:contentDescription="@string/media_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomText"
            android:text="@string/media_btn"/>
    </LinearLayout>

    <!-- Settings Button -->
    <LinearLayout
        android:id="@+id/settings_button"
        style="@style/CustomButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomButtonImage"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/settings_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomText"
            android:text="@string/settings_btn"/>
    </LinearLayout>

</LinearLayout>
