<resources>
    <!-- Button style -->
    <style name="CustomButtonLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="CustomText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="CustomButtonImage">
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="AppSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color_light</item>
        <item name="trackTint">@color/switch_track_color_light</item>

    </style>
    <style name="Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TrackName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ArtistName">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/icon</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="TrackTime">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/icon</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ErrorText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="RetryBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_clr</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/secondary</item>
    </style>
    <style name="newPlaylistBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_clr</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/surface</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>
    <style name="playerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="playerArtistName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="attrStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/icon</item>
    </style>

    <style name="attrValue">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/surface</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/surface</item>
    </style>

    <style name="BottomNavText">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BottomNavTextActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nav_clr</item>
    </style>

    <style name="NewPlaylistField">
        <item name="android:textColor">@color/surface</item>
        <item name="android:textColorHint">@color/surface</item>
    </style>

    <style name="NewPlaylistHint">
        <item name="android:background">@color/background</item>
    </style>

    <style name="CreatePlaylistButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetPlaylistName">
        <item name="android:textColor">@color/surface</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomSheetPlaylistNumberOfTracks">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaylistCard">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>
